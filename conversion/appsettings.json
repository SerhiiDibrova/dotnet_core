package conversion;

{
  "ConnectionStrings": {
    "DefaultConnection": "Server=your_server;Database=your_database;User Id=your_username;Password=your_password;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Authentication": {
    "Jwt": {
      "Issuer": "your_issuer",
      "Audience": "your_audience",
      "Key": "your_secret_key"
    }
  },
  "Endpoints": {
    "GetGradesForStudent": {
      "Method": "GET",
      "Route": "/api/grades/{studentId}",
      "RequiresAuthentication": true,
      "AuthorizationPolicy": "StudentGradesPolicy",
      "Handler": {
        "Type": "GetGradesForStudentHandler",
        "Parameters": {
          "StudentId": "{studentId}"
        }
      }
    }
  }
}